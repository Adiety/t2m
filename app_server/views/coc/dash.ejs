<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>COC | Dashboard</title>

  <!-- Normalize browser inconsistencies -->

  <!-- Bootstrap -->
  <link rel="stylesheet" href="./css/bootstrap.min.css">
  <!-- Font Awesome -->
  <script defer src="./js/fontawesome-all.min.js"></script>
  <!-- MD Bootstrap -->
  <link rel="stylesheet" href="./css/mdb.min.css">
  <!-- Custom stylesheet -->
  <link rel="stylesheet" href="./css/styles.css">

  <style>
    /* Scrollbar styling */

    body::-webkit-scrollbar {
      width: 9px;
    }

    body::-webkit-scrollbar-thumb {
      border-radius: 10px;
      background-color: rgba(29, 17, 17, 0.788);
    }

    body::-webkit-scrollbar-track {
      background-color: rgb(230, 223, 223);
      border-radius: 10px;
    }

    /* Profile Modal */

    .card.profile-card {
      width: 100%;
      margin: 0;
    }

    #profileModal .modal-content,
    #profileModal .modal-content .modal-body,
    #profileModal .modal-content .modal-body .card.profile-card {
      border-radius: 10px;
    }

    #profileModal .modal-content .modal-body .card.profile-card img {
      border-radius: 10px 10px 0 0;
    }
  </style>
</head>

<body>
  <!-- Wrapper stretches to the whole viewport height -->
  <div class="wrapper">
    <!-- Sidebar -->
    <nav id="sidebar" class="navbar sticky-top">
      <div class="navbar-header">
        <img src="https://placehold.it/50x50?text=IMAGE" class="rounded-circle" alt="Profile picture">
        <h5 class="navbar-brand m-1 text-white pl-2">T2M</h5>
      </div>

      <!-- Navbar links -->
      <ul class="navbar-nav">
        <li class="nav-item active">
          <a href="#" class="nav-link btn btn-block btn-lg">
            <i class="fas fa-newspaper fa-lg mr-1"></i>
            <span>Faculty Details</span>
          </a>
        </li>
        <li class="nav-item btn-group">
          <a href="/coc/assigntask" class="nav-link btn btn-block btn-lg">
            <i class="fa fa-tasks" aria-hidden="true"></i>
            <span>Assign Task</span>
         </a>
        </li>
        <li class="nav-item">
          <a href="/coc/mytask" class="nav-link btn btn-block btn-lg">
            <i class="fa fa-book" aria-hidden="true"></i>
            <span>My Task</span>
            <span class="badge badge-pill green d-flex align-items-center justify-content-center">14</span>
          </a>
        </li>
        <li class="nav-item">
          <a href="/coc/openforum" class="nav-link btn btn-block btn-lg">
            <i class="fas fa-file-alt fa-lg mr-1"></i>
            <span>Open Forum</span>
          </a>
        </li>
        <li class="nav-item">
          <a href="/coc/history" class="nav-link btn btn-block btn-lg">
            <i class="fa fa-history" aria-hidden="true"></i>       
             <span>History</span>
          </a>
        </li>
      </ul>
    </nav>

    <!-- Main -->
    <main>
      <!-- Topbar -->
      <nav id="topbar" class="navbar navbar-expand-md sticky-top">
        <!-- sidebar toggle button -->
        <button id="topbar-toggler" class="navbar-toggler" type="button" data-toggle="collapse">
          <span class="fas fa-align-left"></span>
        </button>
        <!-- topbar items toggle button -->
        <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#topbar-items">
          <span class="fas fa-ellipsis-v"></span>
        </button>
        <!-- topbar items -->
        <div class="navbar-collapse collapse" id="topbar-items">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item">
              <a class="nav-link waves-effect waves-light" href="#">
                <i class="fa fa-envelope"></i>
                <span>Message</span>
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link waves-effect waves-light" href="#">
                <i class="fa fa-bell" aria-hidden="true"></i>
                <span>Notification</span>
              </a>
            </li>
            <li class="nav-item dropdown">
              <a class="nav-link waves-effect waves-light dropdown-toggle" id="dropdown-items" data-toggle="dropdown">
                <img src="https://placehold.it/150x80?text=IMAGEg" class="rounded-circle" alt="profile picture">
              </a>
              <div class="dropdown-menu dropdown-menu-right dropdown-menu-secondary">
                <a class="dropdown-item waves-effect waves-light" href="/coc/profile">Profile</a>
                <a class="dropdown-item waves-effect waves-light" href="#">Contact</a>
                <a class="dropdown-item waves-effect waves-light" href="#">Setting</a>
                <a class="dropdown-item waves-effect waves-light" href="#">Log Out</a>
              </div>
            </li>
          </ul>
        </div>
      </nav>